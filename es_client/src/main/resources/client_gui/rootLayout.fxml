<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="rootPane" stylesheets="@emotionalSongs.css" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="client_gui.RootController">
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                      minWidth="-Infinity" spacing="20.0" styleClass="toolbar" stylesheets="@emotionalSongs.css">
                    <children>
                        <Label fx:id="userLabel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                               text="asdasd" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <ButtonBar HBox.hgrow="NEVER">
                            <buttons>
                                <Button fx:id="signupBtn" mnemonicParsing="false" text="Registrati"/>
                                <Button fx:id="loginBtn" mnemonicParsing="false" text="Login"/>
                                <Button fx:id="logoutBtn" disable="true" mnemonicParsing="false" text="Logout"/>
                            </buttons>
                        </ButtonBar>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox alignment="TOP_CENTER" minWidth="-Infinity" prefWidth="125.0" HBox.hgrow="NEVER">
                            <children>
                                <Button fx:id="menuSearchBtn" alignment="TOP_LEFT" contentDisplay="TOP"
                                        maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                        styleClass="sidebar-btn" text="Canzoni">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </Button>
                                <Button fx:id="menuPlaylistsBtn" alignment="TOP_LEFT" disable="true"
                                        maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                        styleClass="sidebar-btn" text="Playlist">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </Button>
                                <Separator prefWidth="200.0">
                                    <VBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </VBox.margin>
                                </Separator>
                                <ListView fx:id="playlistsList" fixedCellSize="36.0" maxHeight="1.7976931348623157E308"
                                          maxWidth="1.7976931348623157E308"/>
                            </children>
                        </VBox>
                        <Separator orientation="VERTICAL" prefHeight="200.0"/>
                        <AnchorPane fx:id="mainView" minHeight="600.0" minWidth="900.0" HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
