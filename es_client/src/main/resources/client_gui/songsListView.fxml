<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane minHeight="400.0" minWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client_gui.SongsListController">
    <children>
        <VBox alignment="TOP_CENTER" minHeight="400.0" minWidth="-Infinity" prefHeight="400.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <GridPane alignment="CENTER" minHeight="40.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="5000.0" minWidth="10.0"/>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="285.0" minWidth="10.0"
                                           prefWidth="85.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" minHeight="15.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button fx:id="searchBtn" mnemonicParsing="false" text="Cerca" GridPane.columnIndex="1"/>
                        <TextField fx:id="searchText" GridPane.hgrow="ALWAYS"/>
                    </children>
                </GridPane>
                <TableView fx:id="songsTable">
                    <columns>
                        <TableColumn fx:id="authorColumn" minWidth="-1.0" prefWidth="-1.0" text="Autore"/>
                        <TableColumn fx:id="albumColumn" minWidth="-1.0" prefWidth="-1.0" text="Album"/>
                        <TableColumn fx:id="yearColumn" minWidth="-1.0" prefWidth="-1.0" text="Anno"/>
                        <TableColumn fx:id="titleColumn" minWidth="-1.0" prefWidth="-1.0" text="Titolo"/>
                        <TableColumn fx:id="genreColumn" minWidth="-1.0" prefWidth="-1.0" text="Genere"/>
                        <TableColumn fx:id="durationColumn" minWidth="-1.0" prefWidth="-1.0" text="Durata"/>
                        <TableColumn fx:id="emotionViewColumn" minWidth="50.0" prefWidth="-1.0" text="Emozioni"/>
                    </columns>
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
