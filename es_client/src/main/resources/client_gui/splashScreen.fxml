<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="window" prefHeight="800.0" prefWidth="1024.0" stylesheets="@emotionalSongs.css"
            xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client_gui.SplashScreenController">
    <children>
        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <Button fx:id="signupBtn" alignment="CENTER" maxWidth="5000.0" mnemonicParsing="false"
                        styleClass="sidebar-btn" text="Registrati">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </Button>
                <Button fx:id="loginBtn" alignment="CENTER" maxWidth="5000.0" mnemonicParsing="false"
                        styleClass="sidebar-btn" text="Accedi">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </Button>
                <Button fx:id="guestBtn" alignment="CENTER" maxWidth="5000.0" mnemonicParsing="false"
                        styleClass="sidebar-btn" text="Continua come ospite">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
